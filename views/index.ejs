<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Clock with alarm!</title>
	<link rel="stylesheet" href="/css/main.css" type="text/css">
	<script type="text/javascript" src="js/jquery-2.1.1.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>	
</head>
<body>
	<div class="app-wrapper">
		<audio src="audio/track1.mp3" id="audio" loop="loop" preload="auto">
			<source src="audio/track1.mp3" type='audio/mpeg; codecs="mp3" preload="auto"'>
			<source src="audio/track1.ogg" type='audio/ogg; codecs="vorbis" preload="auto"'>
		</audio>
		<ul class="container">
			<li class="clock-container">
				<p class="clock"><%= time%></p>
			</li>
			<li class="alarm-container">
				<span class="btn btn-primary btn-menu"><i class="icon-menu"></i>Add new alarm!</span>
				<form action="/" method="post" name="addAlarmForm" id="addAlarmForm" class="hide alarm-form">
					<input name="time" type="time" class="form-control input-time pull-left">
					<button type="submit" class="form-control btn btn-xs btn-add pull-right">Add!</button>
				</form>
				<ul id="alarms" class="alarms">
					<%- include alarms.ejs %>
				</ul>
			</li>
		</ul>
	</div>
	<div class="overlay"></div>
	<div class="modal">
		<p class="msg">To turn off this hell, please, click button below!</p>
		<span id="turnOff" class="btn btn-xs btn-success">Turn off!</span>
	</div>
	<script type="text/javascript" src="/js/app.js"></script>
	<script type="text/javascript" src="/js/handlers.js"></script>
</body>
</html>